{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "baseUrl": "./src",
    "paths": {
      "components/*": ["./components/*"],
      "styles/*": ["./styles/*"],
      "utils/*": ["./utils/*"],
      "assets/*": ["./assets/*"],
      "hooks/*": ["./hooks/*"],
      "stores/*": ["./stores/*"]
    }
  }
}
